---
import "../styles/navlinks.css";

const planetList = [
    "mercury",
    "venus",
    "earth",
    "mars",
    "jupiter",
    "saturn",
    "uranus",
    "neptune",
];
---

<nav>
    {
        planetList.map((planet) => {
            const accentClasses = `accent-hover bg-${planet}`;
            const planetLink = `/planets-fact-site/${planet}`;
            return (
                <div class="planet-list-element">
                    <div class={accentClasses} />
                    <a class="heading-4" href={planetLink}>
                        {planet}
                    </a>
                </div>
            );
        })
    }
</nav>

<style>
    nav {
        display: none;
        position: absolute;
        padding-top: 0;
    }

    .planet-list-element {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    a {
        all: unset;
        display: block;
        width: 100%;
        text-transform: uppercase;
        text-align: center;
        opacity: 0.75;
        cursor: pointer;
    }

    a:hover {
        opacity: 1;
    }

    /* Nav list links accent visibility configuration */

    .accent-hover:has(+ a:hover) {
        --accent-visible: visible !important;
    }
    .accent-hover {
        visibility: var(--accent-visible);
        width: 100%;
        height: 4px;
    }

    @media (min-width: 768px) {
        nav {
            position: relative;
            display: flex;
            align-items: center;
            gap: 33px;
            padding-top: 22px;
        }

        div {
            width: 100%;
            height: 100%;
        }

        button {
            display: none;
        }
    }
    @media (min-width: 1440px) {
        nav {
            padding-top: 0;
        }

        .planet-list-element {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    }
</style>

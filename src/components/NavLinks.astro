---
import "../styles/navlinks.css";
import IconChevron from "./IconChevron.astro";

const planetList = [
    "mercury",
    "venus",
    "earth",
    "mars",
    "jupiter",
    "saturn",
    "uranus",
    "neptune",
];
---

<nav class="planet-list hide-nav">
    {
        planetList.map((planet) => {
            const accentClasses = `accent-hover bg-${planet}`;
            const planetLink = `/planets-fact-site/${planet}`;
            return (
                <div class="planet-list__element">
                    <div class={accentClasses} />
                    <a class="heading-4" href={planetLink}>
                        <span>{planet}</span>
                        <span>
                            <IconChevron />
                        </span>
                    </a>
                </div>
            );
        })
    }
</nav>

<style>
    nav {
        position: absolute;
        z-index: 1;
        top: 69px;
        left: 0;
        height: calc(100vh - 68px);
        display: flex;
        flex-direction: column;
        background-color: var(--clr-body-bg);
        width: 100%;
    }

    .hide-nav {
        display: none !important;
    }

    .planet-list__element {
        width: 100%;
        display: flex;
        justify-content: left;
        align-items: center;
        height: 67px;
        border-style: solid;
        border-width: 0 0 1px 0;
        border-color: rgba(255, 255, 255, 0.2);
    }

    .planet-list__element > div {
        display: none;
    }

    a {
        all: unset;
        padding-inline: 24px;

        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 100%;
        width: 100%;
        text-transform: uppercase;
        text-align: center;
        opacity: 0.75;
        cursor: pointer;
    }

    a:hover {
        opacity: 1;
        background-color: var(--clr-accent-planet);
    }

    /* Nav list links accent visibility configuration */

    .accent-hover:has(+ a:hover) {
        --accent-visible: visible !important;
    }
    .accent-hover {
        visibility: var(--accent-visible);
        width: 100%;
        height: 4px;
    }

    @media (min-width: 768px) {
        .hide-nav {
            display: flex !important;
        }

        nav {
            position: static;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 33px;
            padding-top: 0px;
            top: auto;
            left: auto;
            height: 25px;
            width: auto;
            background-color: transparent;
        }

        a {
            width: auto;
            padding-inline: 0;
        }
        a > span:last-child {
            display: none;
        }

        a:hover {
            opacity: 1;
            background-color: transparent;
        }

        div {
            width: 100%;
            height: 100%;
        }

        .planet-list__element > div {
            display: block;
        }

        button {
            display: none;
        }

        .planet-list__element {
            justify-content: center;

            padding-inline: 0;
            border: none;
        }
    }
    @media (min-width: 1440px) {
        nav {
            height: 58px;
            align-items: stretch;
            justify-content: space-between;
            padding-top: 0;
        }

        .planet-list__element {
            width: auto;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    }
</style>
